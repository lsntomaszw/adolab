server:
  port: 8080
  servlet:
    encoding:
      force-response: true
      charset: UTF-8

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/adolab
    username: admin
    password: admin
    type: com.zaxxer.hikari.HikariDataSource
    hikari:
      maximum-pool-size: 10
      minimum-idle: 2
  flyway:
    locations: classpath:db/migration
    table: schema_version
    out-of-order: true
  data:
    redis:
      host: localhost
      port: 6379

mybatis:
  mapper-locations: classpath:db/mapper/*.xml
  configuration:
    map-underscore-to-camel-case: true

azure:
  devops:
    organization: your-organization
    project: your-project
    pat: your-personal-access-token
    base-url: https://dev.azure.com
    api-version: "7.1"

logging:
  level:
    dev.adolab: DEBUG
